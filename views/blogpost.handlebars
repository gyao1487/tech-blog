<section class="container">
      <!-- The card contains the blogpost title as the card header -->
    <header>{{blogpost.title}}</header>
    
  <p>Posted by {{blogpost.User.name}} on {{blogpost.created_at}}</p>
    <!-- The card contains the content of the blogpost -->
    <p>{{blogpost.content}}</p>
  <!-- If the user is logged in, render the comments-->
  {{#if loggedIn}}
   {{#each blogpost.comments}}
   {{>comment-card}}
   {{/each}}
  {{/if}}

</section>
